{{!
    @template local_fancybox3/gallery

    Gallery template

    Example context (json):
    {
      "images": [
        { "image": "http://moodle.com/wp-content/themes/moodle/images/logo-hat2.png", "caption": "text", "alttext": "text", "printable": "true" },
        { "image": "http://moodle.com/wp-content/themes/moodle/images/logo-hat2.png", "caption": "text", "alttext": "text" },
        { "image": "http://moodle.com/wp-content/themes/moodle/images/logo-hat2.png", "caption": "text", "alttext": "text" }
      ]
    }
}}

<div id="example-gallery">
    {{# images }}
    <a href="{{ image }}" data-fancybox="gallery" data-caption="{{ caption }}">
        <img src="{{ image }}" alt="{{ alttext }}" style="display: none;"/>
        {{# printable}}
        <span>Click here!</span>
        {{/ printable}}
    </a>
    {{/ images }}
</div>
{{#js}}
require(['jquery', 'local_fancybox3/jquery.fancybox'], function($) {

    $().fancybox({
        selector: '[data-fancybox="gallery"]',
        loop: true
    });

});
{{/js}}